{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": false
    },
    "description": {
      "type": "text",
      "maxLength": 80,
      "required": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": false
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "publish_date": {
      "type": "datetime",
      "required": false,
      "default": "2024-05-14T05:00:01.148Z"
    },
    "blog_post_topics": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::blog-post-topic.blog-post-topic",
      "inversedBy": "blog_posts",
      "required": false
    },
    "blog_post_type": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::blog-post-type.blog-post-type",
      "inversedBy": "blog_posts"
    },
    "blocks": {
      "type": "dynamiczone",
      "components": [
        "shared.rich-text",
        "shared.html"
      ],
      "required": false
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "short_title": {
      "type": "string"
    },
    "icon": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    }
  }
}
